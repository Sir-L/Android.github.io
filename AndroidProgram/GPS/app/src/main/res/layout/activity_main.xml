<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="LocationProvider"
            android:textSize="25dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginRight="20dp"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="查看定位信息"
            android:textSize="25dp"
            android:id="@+id/btnGetLocationProviderMsg"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="定位过滤后"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/btnAfterCriteriaMsg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="LocationManager"
            android:textSize="25dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginRight="20dp"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="是否打开GPS"
            android:textSize="25dp"
            android:id="@+id/btnCheckGPSOpen"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="打开GPS"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/btnOpenGPS"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="LocationManager其他方法"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/btnOtherFunction"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="获取定位信息"
            android:textSize="25dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginRight="40dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="实时获取定位信息"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/btnGetLocationMsg"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="地域围栏"
            android:textSize="25dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginRight="90dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="开启地域围栏"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/btnOpenAreaRail"/>
    </LinearLayout>

</LinearLayout>